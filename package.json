{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "build": "turbo run build",
    "clean": "pnpm -w dlx rimraf \"node_modules\" \"packages/**/node_modules\" \"packages/**/dist\"",
    "clean:dist": "pnpm -w dlx rimraf \"packages/**/dist\"",
    "depcruise": "pnpm exec depcruise apps packages --include-only \"^(apps|packages)/\"",
    "dependency-graph": "depcruise apps packages --include-only \"^(apps|packages)/\" --exclude \"(/dist/|/\\.next/|/coverage/|/src/generated/|/node_modules/)\" --output-type dot | dot -T svg > dependency-graph.svg",
    "dev": "turbo run dev dev:check --concurrency=20",
    "fix-mismatches": "syncpack fix-mismatches",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:pkg": "pnpm exec sort-package-json \"**/package.json\" \"!**/node_modules/**\"",
    "knip": "knip --config knip.json",
    "lint": "turbo run lint",
    "list-mismatches": "syncpack list-mismatches",
    "prepare": "husky",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dependency-cruiser": "^17.3.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "knip": "^5.73.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.5.1",
    "syncpack": "^13.0.4",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=22"
  }
}
