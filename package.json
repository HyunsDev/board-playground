{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "build": "turbo run build",
    "clean": "pnpm -w dlx rimraf \"node_modules\" \"packages/**/node_modules\" \"packages/**/dist\"",
    "dev": "turbo run dev dev:check --concurrency=20",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:pkg": "pnpm exec sort-package-json \"**/package.json\" \"!**/node_modules/**\"",
    "lint": "turbo run lint",
    "prepare": "husky",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e"
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "sort-package-json": "^3.5.1",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  }
}
