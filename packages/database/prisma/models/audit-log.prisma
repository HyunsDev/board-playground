model AuditLog {
    id String @id @default(uuid()) @db.Uuid

    actorId    String? @db.Uuid
    targetType String
    targetId   String?
    eventCode  String

    correlationId String? @db.VarChar(50)
    ipAddress     String? @db.VarChar(45)

    data     Json
    metadata Json?

    occurredAt DateTime @default(now())

    @@index([actorId])
    @@index([targetType, targetId])
    @@index([occurredAt])
}
