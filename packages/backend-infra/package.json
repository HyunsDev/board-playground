{
  "name": "@workspace/backend-infra",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "pnpm clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "tsc -p tsconfig.build.json -w & tsc-alias -p tsconfig.build.json -w",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@workspace/backend-common": "workspace:*",
    "@workspace/backend-ddd": "workspace:*",
    "@workspace/common": "workspace:*",
    "@workspace/database": "workspace:*",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@nestjs/core": "^11.0.0",
    "@types/node": "^22.10.7",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "rimraf": "^6.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "@nestjs-cls/transactional": "^3.1.1",
    "@nestjs-cls/transactional-adapter-prisma": "^1.3.1",
    "@nestjs/core": "^11.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
