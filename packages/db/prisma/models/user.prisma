model User {
    id        String     @id @default(uuid())
    username  String     @unique // 삭제시 deleted_{userId} 형태로 변경
    nickname  String
    email     String     @unique // 삭제시 deleted_{userId}@deleted.user 형태로 변경
    bio       String?
    avatarUrl String?
    role      UserRole   @default(USER)
    status    UserStatus @default(ACTIVE)

    hashedPassword String?

    lastActiveAt DateTime  @default(now())
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @updatedAt
    deletedAt    DateTime?

    adminMemo String?

    sessions Session[]
    managers Manager[]
    posts    Post[]
    comments Comment[]
}

enum UserRole {
    ADMIN
    USER
}

enum UserStatus {
    ACTIVE
    INACTIVE
    BANNED
    DELETED
}
