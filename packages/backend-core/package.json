{
  "name": "@workspace/backend-core",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "tsc -p tsconfig.build.json -w & tsc-alias -p tsconfig.build.json -w",
    "build": "pnpm clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint \"{src,test}/**/*.ts\""
  },
  "dependencies": {
    "@workspace/backend-ddd": "workspace:*",
    "@workspace/common": "workspace:*",
    "@workspace/database": "workspace:*",
    "@workspace/domain": "workspace:^",
    "neverthrow": "^8.2.0",
    "uuid": "^13.0.0",
    "zod": "^3"
  },
  "devDependencies": {
    "@nestjs-cls/transactional": "^3.1.1",
    "@nestjs-cls/transactional-adapter-prisma": "^1.3.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/cqrs": "^11.0.3",
    "@types/express": "^4.17.17",
    "@types/node": "^22.10.7",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "nestjs-cls": "^6.1.0",
    "rimraf": "^6.0.0",
    "rxjs": "^7.8.1",
    "tsc-alias": "^1.8.16",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "@nestjs-cls/transactional": "^3.1.1",
    "@nestjs-cls/transactional-adapter-prisma": "^1.3.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/cqrs": "^11.0.3",
    "nestjs-cls": "^6.1.0",
    "rxjs": "^7.8.1"
  },
  "engines": {
    "node": ">=18"
  }
}
