{
  "name": "@workspace/backend-core",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "tsc -p tsconfig.build.json -w & tsc-alias -p tsconfig.build.json -w",
    "build": "pnpm clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint \"{src,test}/**/*.ts\""
  },
  "dependencies": {
    "neverthrow": "^8.2.0",
    "zod": "^3",
    "@workspace/common": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "rimraf": "^6.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
